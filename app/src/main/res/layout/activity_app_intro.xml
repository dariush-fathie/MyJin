<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitys.AppIntro">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_intro"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/limit"
        android:layout_below="@id/toolbar">

    </android.support.v7.widget.RecyclerView>

    <View
        android:id="@+id/limit"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_above="@+id/rv_bottom"
        android:layout_alignParentStart="true"
        android:background="@color/white" />

    <RelativeLayout
        android:id="@+id/rv_bottom"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true">

        <CheckBox
            android:id="@+id/cb_intro"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layoutDirection="rtl"
            android:paddingLeft="3dp"
            android:text="عدم نمایش" />

        <com.rbrooks.indefinitepagerindicator.IndefinitePagerIndicator
            android:id="@+id/list_indicator_i"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="8dp"
            android:rotation="180"
            app:dotColor="#040404"
            app:selectedDotColor="#040404" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_next"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:text="شروع"
            android:textColor="#040404"
            android:textSize="15sp" />
    </RelativeLayout>

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_next"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:src="@drawable/ic_next"
        android:tint="@color/c1" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:src="@drawable/ic_back"
        android:tint="@color/c1"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/rv_splash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/browser_actions_bg_grey">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="70dp"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="70dp"
            app:cardCornerRadius="5dp">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@drawable/splash_back">

            </android.support.v7.widget.AppCompatImageView>

            <com.github.rahatarmanahmed.cpv.CircularProgressView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                app:cpv_animAutostart="true"
                app:cpv_indeterminate="true" />
        </android.support.v7.widget.CardView>

    </RelativeLayout>

</RelativeLayout>