<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_intro"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.rbrooks.indefinitepagerindicator.IndefinitePagerIndicator
        android:id="@+id/list_indicator_i"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:dotColor="#7a040404"
        app:dotCount="5"
        app:dotSeparation="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_skip"
        app:layout_constraintEnd_toStartOf="@+id/iv_next"
        app:layout_constraintStart_toEndOf="@+id/tv_skip"
        app:selectedDotColor="@color/white" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_next"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/round_transparent_circle_black"
        android:padding="11dp"
        android:src="@drawable/ic_next_arrow"
        app:layout_constraintBottom_toBottomOf="@+id/rv_intro"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_skip"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/skip"
        android:textColor="@color/white"
        android:foreground="?selectableItemBackgroundBorderless"
        android:textSize="15sp"
        android:textStyle="bold"
        app:fontFamily="@font/samim"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/cb_display"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:checked="true"
        android:button="@null"
        android:drawableEnd="?android:listChoiceIndicatorMultiple"
        android:text="@string/nemayesh"
        android:textColor="@color/white"
        app:fontFamily="@font/samim"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>