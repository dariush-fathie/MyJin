<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:foreground="?selectableItemBackgroundBorderless"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_bottomListImage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/t2"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:padding="6dp"

            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_jin"
            android:transitionName="transition_name"
            app:civ_border_color="@android:color/transparent"
            app:civ_border_width="1dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_below="@id/iv_bottomListImage"
            android:id="@+id/tv_bottomListTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:paddingEnd="8dp"
            android:paddingStart="4dp"
            android:paddingTop="8dp"
            android:textColor="@color/title"
            android:textSize="14sp"
            app:fontFamily="@font/samim" />




        <androidx.appcompat.widget.AppCompatTextView
            android:layout_below="@id/tv_bottomListTitle"
            android:id="@+id/tv_bottomListSubTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingEnd="8dp"
            android:paddingStart="4dp"
            android:textColor="@color/subTitle"
            android:textSize="12sp"
            app:fontFamily="@font/samim" />
    </RelativeLayout>


</androidx.cardview.widget.CardView>