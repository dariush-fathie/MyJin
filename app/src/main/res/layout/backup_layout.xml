<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="16dp">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/tv_backup_title"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_backup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/appCompatTextView6"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/samim"
        android:padding="10dp"
        android:text="@string/backupTitle"
        android:textColor="@color/title"
        android:textSize="13sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_backup_context"
        app:layout_constraintEnd_toStartOf="@+id/tv_backup_title"
        app:layout_constraintTop_toTopOf="parent" />
    <View
        android:id="@+id/vs"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/back"
        app:layout_constraintTop_toBottomOf="@+id/tv_backup_title"/>
    <TextView
        android:text="@string/backupContext"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/samim"
        android:id="@+id/tv_backup_context"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/vs"/>


    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_ok"
        android:layout_width="0dp"
        android:foreground="?selectableItemBackgroundBorderless"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:text="باشه"
        android:fontFamily="@font/samim"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_backup_context" />


</android.support.constraint.ConstraintLayout>
