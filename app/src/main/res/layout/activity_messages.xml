<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitys.DetailMessagesActivity">

    <RelativeLayout
        android:id="@+id/rl_toolbar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/green"
        android:clickable="true"
        android:focusable="true">


        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_share"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentEnd="true"
            android:padding="10dp"
            android:src="@drawable/ic_share"
            app:tint="@color/white" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_goback"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentStart="true"
            android:padding="6dp"
            android:src="@drawable/ic_back_test"
            app:tint="@color/white" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_save"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_toStartOf="@+id/iv_share"
            android:padding="10dp"
            android:src="@drawable/icons_bookmark_1"
            android:tint="@color/white" />


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rl_toolbar">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/iv_messageImage"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:src="@color/white"
                    android:scaleType="centerCrop"

                    android:transitionName="transition_name"
                    />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingBottom="5dp"
                android:paddingEnd="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:text="@string/lorem"
                android:textAlignment="textEnd"
                android:textColor="@color/title"
                android:textSize="15sp"
                android:textStyle="bold"
                app:fontFamily="@font/yekan" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="5dp"
                android:paddingBottom="5dp"
                android:text="دانشگاه : چند لحظه پیش"
                android:textColor="@color/c1"
                android:textSize="14sp"
                android:textStyle="bold"
                app:fontFamily="@font/yekan" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/back1"
                android:padding="5dp" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:autoLink="web"
                android:ellipsize="end"
                android:lineSpacingExtra="5dp"
                android:padding="10dp"
                android:paddingBottom="5dp"
                android:text="@string/lorem"
                android:textColor="@color/subTitle"
                android:textSize="14sp"
                android:textStyle="bold"
                app:fontFamily="@font/yekan" />
        </android.support.v7.widget.LinearLayoutCompat>
    </ScrollView>


</android.support.constraint.ConstraintLayout>