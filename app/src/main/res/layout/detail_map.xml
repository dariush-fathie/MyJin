<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_detailMapSheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    android:background="@color/white"
    app:layout_behavior="myjin.pro.ahoora.myjin.customClasses.CustomBottomSheetBehavior">

    <myjin.pro.ahoora.myjin.customClasses.CustomMapView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/detailMap"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </myjin.pro.ahoora.myjin.customClasses.CustomMapView>

    <androidx.appcompat.widget.AppCompatImageView
        android:visibility="gone"
        android:id="@+id/iv_marker"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginBottom="36dp"
        android:src="@drawable/ic_marker"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/red"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/red"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:visibility="gone"
        android:id="@+id/tv_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="#d6ffffff"
        android:padding="8dp"
        android:textColor="@color/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:visibility="gone"
        android:layout_marginStart="8dp"
        android:id="@+id/btn_savePoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:padding="8dp"
        android:text="ذخیره نقطه در اطلاعات مرکز"
        app:fontFamily="@font/samim"
        app:layout_constraintTop_toBottomOf="@+id/tv_point" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_marginBottom="8dp"
            android:id="@+id/fab_direction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_direction"
            android:tint="@color/white"
            app:backgroundTint="@color/green"
            app:fabSize="normal" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:foreground="?selectableItemBackgroundBorderless"
            android:id="@+id/fab_closeMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close"
            android:tint="@color/white"
            app:backgroundTint="@color/green"
            app:fabSize="normal" />

    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/cv_direction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_direction"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:foreground="?selectableItemBackgroundBorderless"
            android:padding="12dp"
            android:src="@drawable/ic_walking"
            android:tint="#d1625c5c" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cv_direction"
        android:foregroundGravity="center">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_level"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:foreground="?selectableItemBackgroundBorderless"
            android:background="#00ffffff"
            android:padding="12dp"
            android:src="@drawable/ic_layer"
            android:tint="#d1625c5c" />

    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:id="@+id/ll_detailProgress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center"
        android:visibility="gone">

        <com.github.rahatarmanahmed.cpv.CircularProgressView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cpv_animAutostart="true"
            app:cpv_indeterminate="true" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>