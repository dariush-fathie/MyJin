<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitys.SpecActivity"
    android:background="@color/back">
    <RelativeLayout
        android:id="@+id/rl_toolbar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/green"
        android:clickable="true"
        android:focusable="true">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_officeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:text="@string/takhsosha"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            app:fontFamily="@font/samim" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_menu"
            android:layout_width="44dp"
            android:foreground="?selectableItemBackgroundBorderless"
            android:layout_height="44dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:padding="10dp"
            android:src="@drawable/ic_menu"
            app:tint="@color/white" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_goback"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:foreground="?selectableItemBackgroundBorderless"
            android:layout_alignParentStart="true"
            android:padding="7dp"
            android:src="@drawable/ic_back_test"
            app:tint="@color/white" />
    </RelativeLayout>

    <LinearLayout

        android:id="@+id/ll_t"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:baselineAligned="false"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rl_toolbar">

        <RelativeLayout
            android:id="@+id/rl_sort"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/white_round_rect"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_sort"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_toStartOf="@+id/iv_sort"
                android:gravity="start|center_vertical"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="مرتب سازی"
                android:textSize="15sp"
                app:fontFamily="@font/samim" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_sort"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_alignParentEnd="true"
                android:padding="7dp"
                android:src="@drawable/ic_sort_test"
                app:tint="@color/green" />

        </RelativeLayout>

        <View
            android:id="@+id/view_divider"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/c1" />

        <RelativeLayout
            android:id="@+id/rl_filter"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/white_round_rect"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_filter"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_toStartOf="@+id/iv_category"
                android:gravity="start|center_vertical"
                android:maxLines="1"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="فیلتر کردن"
                android:textSize="15sp"
                app:fontFamily="@font/samim" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_category"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_alignParentEnd="true"
                android:padding="7dp"
                android:src="@drawable/ic_filter_test"
                app:tint="@color/green" />

        </RelativeLayout>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_spec"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/ll_t"
        app:layout_constraintBottom_toBottomOf="parent" />
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/gradient"
        app:layout_constraintTop_toBottomOf="@+id/ll_t" />
</androidx.constraintlayout.widget.ConstraintLayout>