<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <EditText
        android:layout_marginTop="15dp"
        android:id="@+id/et_nacode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/rounded_edittext_states"
        android:hint="کد ملی"
        android:inputType="number"
        android:maxLines="1"
        android:padding="8dip"
        android:textColor="#538350" />

    <LinearLayout
        android:layout_below="@+id/et_nacode"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_valid_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:text="تا تاریخ :"
                android:textColor="#538350"
                android:layout_alignParentRight="true" />

            <TextView

                android:layout_below="@+id/tv_valid_title"
                android:id="@+id/tv_to_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext_states"
                android:gravity="center"
                android:maxLines="1"
                android:padding="8dip"
                android:text="20/2/98"
                android:textColor="#538350" />
        </RelativeLayout>
        <View
            android:layout_weight="0.03"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_birthday_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:text="از تاریخ :"
                android:textColor="#538350"
                android:layout_alignParentRight="true" />

            <TextView
                android:id="@+id/tv_from_date"
                android:layout_width="152dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_birthday_title"
                android:background="@drawable/rounded_edittext_states"
                android:gravity="center"
                android:maxLines="1"
                android:padding="8dip"
                android:text="20/2/97"
                android:textColor="#538350" />
        </RelativeLayout>


    </LinearLayout>



</RelativeLayout>
