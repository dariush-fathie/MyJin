<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitys.SettingActivity"
    android:background="@color/back0">

    <RelativeLayout
        android:id="@+id/rl_toolbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/green"
        android:clickable="true"
        android:focusable="true">


        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:text="تنظیمات"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:fontFamily="@font/yekan" />


        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_goback"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:padding="12dp"
            android:src="@drawable/ic_back"
            app:tint="@color/white" />
    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_fav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        app:layout_constraintTop_toBottomOf="@+id/rl_toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/fav_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_margin="5dp"
                android:fontFamily="@font/yekan"
                android:text="پاک کردن نشان شده ها"
                android:textColor="@color/green"
                android:textSize="16sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/v_fav"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_below="@+id/fav_title"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/back" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_title_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/v_fav"
                android:fontFamily="@font/yekan"
                android:padding="10dp"
               android:text="@string/healthCenters"
                android:textColor="@color/title"
                android:textSize="15sp" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/sc_centers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v_fav"
                android:padding="10dp"
                android:enabled="false"
                />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_title_m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/tv_title_c"
                android:fontFamily="@font/yekan"
                android:padding="10dp"
                android:text="@string/etlaeieh"
                android:textColor="@color/title"
                android:textSize="15sp" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/sc_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title_c"
                android:padding="10dp"
                android:enabled="false"/>
        </RelativeLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/cv_fav">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tab_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_margin="5dp"
                android:fontFamily="@font/yekan"
                android:text="زبانه پیش فرض"
                android:textColor="@color/green"
                android:textSize="16sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/v_tab"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_below="@+id/tab_title"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/back" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v_tab"
                android:layoutDirection="rtl"
                android:padding="5dp">

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/rb_centers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/yekan"
                    android:layoutDirection="rtl"
                    android:padding="10dp"
                   android:text="@string/healthCenters"
                    android:textColor="@color/title"
                    android:textSize="15sp" />

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/rb_messages"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/yekan"
                    android:layoutDirection="rtl"
                    android:padding="10dp"
                    android:text="@string/etlaeieh"
                    android:textColor="@color/title"
                    android:textSize="15sp" />
            </RadioGroup>

        </RelativeLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/cv_tab">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/fav_intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_margin="5dp"
                android:fontFamily="@font/yekan"
                android:text="صفحه معرفی"
                android:textColor="@color/green"
                android:textSize="16sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/v_intro"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_below="@+id/fav_intro"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/back" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_title_i"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/v_intro"
                android:fontFamily="@font/yekan"
                android:padding="10dp"
                android:text="عدم نمایش"
                android:textColor="@color/title"
                android:textSize="15sp" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/sc_intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v_intro"
                android:padding="10dp" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>