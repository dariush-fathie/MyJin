<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_sort1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <android.support.v7.widget.AppCompatRadioButton
                android:clickable="false"
                android:id="@+id/rb1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                 />

            <android.support.v7.widget.AppCompatTextView
                android:clickable="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/rb1"
                android:layout_toStartOf="@+id/rb1"
                android:padding="5dp"

                android:text="به ترتیب حروف الفبا - نزولی"
                android:textSize="15sp"
                app:fontFamily="@font/samim" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_sort2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <android.support.v7.widget.AppCompatRadioButton
                android:clickable="false"
                android:id="@+id/rb2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/rb2"
                android:layout_toStartOf="@+id/rb2"
                android:fontFamily="@font/samim"
                android:padding="5dp"
                android:text="به ترتیب حروف الفبا - صعودی"
                android:textSize="15sp" />
        </RelativeLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>