<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rl_toolbar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/green"
            android:clickable="true"
            android:focusable="true">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_showMap"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_toStartOf="@+id/iv_share"
                android:padding="12dp"
                android:src="@drawable/ic_pin"
                app:tint="@color/white" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_share"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:padding="12dp"
                android:src="@drawable/ic_share"
                app:tint="@color/white" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_goback"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentStart="true"
                android:padding="12dp"
                android:src="@drawable/ic_back"
                app:tint="@color/white" />


        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/rl_seeOnMap"
            android:layout_below="@+id/rl_toolbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingEnd="8dp"
                android:paddingStart="8dp">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="160dp">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_imageListBig"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <com.rbrooks.indefinitepagerindicator.IndefinitePagerIndicator
                            android:id="@+id/list_indicator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="8dp"
                            android:rotation="180"
                            app:dotColor="@color/colorPrimaryDark"
                            app:dotCount="3"
                            app:selectedDotColor="@color/green" />

                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <com.google.android.flexbox.FlexboxLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="16dp"
                    android:paddingTop="8dp"
                    app:flexWrap="wrap"
                    app:justifyContent="space_evenly">

                    <android.support.v7.widget.CardView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:cardBackgroundColor="@color/cpv_default_color"
                        app:cardCornerRadius="20dp">

                        <android.support.v7.widget.AppCompatImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="8dp"
                            android:src="@drawable/ic_share"
                            app:tint="@color/white" />
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:cardBackgroundColor="@color/green"
                        app:cardCornerRadius="20dp">

                        <android.support.v7.widget.AppCompatImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="8dp"
                            android:src="@drawable/ic_pin"
                            app:tint="@color/white" />

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:cardBackgroundColor="@color/colorAccent"
                        app:cardCornerRadius="20dp">

                        <android.support.v7.widget.AppCompatImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="8dp"
                            android:src="@drawable/ic_bookmark"
                            app:tint="@color/white" />

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:cardBackgroundColor="@color/red"
                        app:cardCornerRadius="20dp">

                        <android.support.v7.widget.AppCompatImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="8dp"
                            android:src="@drawable/ic_tele"
                            app:tint="@color/white" />
                    </android.support.v7.widget.CardView>

                </com.google.android.flexbox.FlexboxLayout>

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_row1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp">

                    <android.support.constraint.ConstraintLayout
                        android:id="@+id/rl_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:padding="8dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/aiv_logoImg"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@drawable/t"
                            android:contentDescription="@null"
                            android:src="@drawable/ic_jin"
                            android:transitionName="transition_name"
                            app:civ_border_color="@color/blue"
                            app:civ_border_width="1dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/tv_title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:layout_marginStart="8dp"
                            android:lines="1"
                            android:paddingBottom="4dp"
                            android:paddingTop="4dp"
                            android:text="نام"
                            android:textColor="@color/title"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            app:fontFamily="@font/yekan"
                            app:layout_constraintEnd_toStartOf="@+id/aiv_logoImg"
                            app:layout_constraintStart_toEndOf="@+id/iv_save"
                            app:layout_constraintTop_toTopOf="parent" />

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/tv_subTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginStart="0dp"
                            android:lines="1"
                            android:paddingBottom="4dp"
                            android:text="متخصص"
                            android:textColor="@color/subTitle"
                            android:textSize="13sp"
                            app:fontFamily="@font/yekan"
                            app:layout_constraintEnd_toStartOf="@+id/aiv_logoImg"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_title" />

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/tv_addr"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginEnd="16dp"
                            android:layout_marginStart="8dp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="آدرس"
                            android:textColor="@color/c1"
                            android:textSize="13sp"
                            app:layout_constraintEnd_toStartOf="@+id/aiv_logoImg"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_subTitle" />

                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/iv_save"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:padding="6dp"
                            android:src="@drawable/icons_bookmark_1"
                            android:tint="@color/colorAccent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </android.support.constraint.ConstraintLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_showMap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="روی نقشه نشان بده"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/colorAccent"
                    app:fontFamily="@font/yekan" />

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_row2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp">

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="8dp"
                        android:paddingEnd="8dp"
                        android:paddingStart="16dp"
                        android:paddingTop="8dp">

                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/aiv_logoImg_tel"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_marginBottom="4dp"
                            android:padding="6dp"
                            android:src="@drawable/ic_tele"
                            android:tint="@color/blue"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <android.support.v7.widget.AppCompatButton
                            android:id="@+id/tv_telephone"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginEnd="8dp"
                            android:text="09180143382"
                            android:textColor="@color/white"
                            app:backgroundTint="@color/colorPrimary"
                            app:fontFamily="@font/yekan"
                            app:layout_constraintEnd_toStartOf="@+id/aiv_logoImg_tel"
                            app:layout_constraintHorizontal_bias="0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/aiv_logoImg_web"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_marginBottom="4dp"
                            android:padding="6dp"
                            android:src="@drawable/ic_website"
                            android:tint="@color/blue"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/aiv_logoImg_tel" />

                        <android.support.v7.widget.AppCompatButton
                            android:id="@+id/tv_website"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:layout_marginEnd="8dp"
                            android:autoLink="web"
                            android:lines="1"
                            android:text="www.MyJin.ir"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textColorLink="@color/white"
                            app:backgroundTint="@color/colorPrimary"
                            app:fontFamily="@font/yekan"
                            app:layout_constraintEnd_toStartOf="@+id/aiv_logoImg_web"
                            app:layout_constraintHorizontal_bias="0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_telephone" />

                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/aiv_logoImg_mail"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:padding="6dp"
                            android:src="@drawable/ic_mail"
                            android:tint="@color/blue"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/aiv_logoImg_web" />

                        <android.support.v7.widget.AppCompatButton
                            android:id="@+id/tv_mail"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:layout_marginEnd="8dp"
                            android:autoLink="email"
                            android:lines="1"
                            android:text="ahoora1389iran@gmail.com"
                            android:textAllCaps="false"
                            android:textColor="@color/title"
                            android:textColorLink="@color/white"
                            app:backgroundTint="@color/colorPrimary"
                            app:layout_constraintEnd_toStartOf="@+id/aiv_logoImg_mail"
                            app:layout_constraintHorizontal_bias="0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_website" />

                    </android.support.constraint.ConstraintLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_row3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/aiv_logoImg_weekdays"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:padding="6dp"
                            android:src="@drawable/ic_weekdays"
                            android:tint="@color/blue"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/appCompatTextView"
                            android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:layout_marginEnd="16dp"
                            android:gravity="center_vertical"
                            android:text="روزهای کاری"
                            android:textColor="@color/title"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:fontFamily="@font/yekan"
                            app:layout_constraintEnd_toStartOf="@+id/aiv_logoImg_weekdays"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/tv_attend"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:paddingBottom="8dp"
                            android:text="@string/lorem"
                            android:textColor="@color/c1"
                            android:textSize="13sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="@+id/appCompatTextView"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/appCompatTextView" />
                    </android.support.constraint.ConstraintLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_row4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/aiv_logoImg_cv"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:padding="6dp"
                            android:src="@drawable/ic_bio"
                            android:tint="@color/blue"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/appCompatTextView2"
                            android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:layout_marginEnd="16dp"
                            android:gravity="center_vertical"
                            android:text="معرفی"
                            android:textColor="@color/title"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:fontFamily="@font/yekan"
                            app:layout_constraintEnd_toStartOf="@+id/aiv_logoImg_cv"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/tv_cv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:paddingBottom="8dp"
                            android:text="@string/lorem"
                            android:textColor="@color/c1"
                            android:textSize="13sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="@+id/appCompatTextView2"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/appCompatTextView2" />
                    </android.support.constraint.ConstraintLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_row5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/aiv_logoImg_service"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:padding="6dp"
                            android:src="@drawable/ic_service"
                            android:tint="@color/blue"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/appCompatTextView3"
                            android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginStart="8dp"
                            android:layout_toStartOf="@+id/aiv_logoImg_service"
                            android:gravity="center_vertical"
                            android:text="خدمات"
                            android:textColor="@color/title"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:fontFamily="@font/yekan"
                            app:layout_constraintEnd_toStartOf="@+id/aiv_logoImg_service"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/tv_service"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:paddingBottom="8dp"
                            android:text="@string/lorem"
                            android:textColor="@color/c1"
                            android:textSize="13sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="@+id/appCompatTextView3"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/appCompatTextView3" />
                    </android.support.constraint.ConstraintLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_row6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp">

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/aiv_logoImg_incurance"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:padding="6dp"
                            android:src="@drawable/ic_incurance"
                            android:tint="@color/blue"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/appCompatTextView5"
                            android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:layout_marginEnd="16dp"
                            android:layout_toStartOf="@+id/aiv_logoImg_incurance"
                            android:gravity="center_vertical"
                            android:text="بیمه های طرف قرار داد"
                            android:textColor="@color/title"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:fontFamily="@font/yekan"
                            app:layout_constraintEnd_toStartOf="@+id/aiv_logoImg_incurance"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />


                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/tv_incurance"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:paddingBottom="8dp"
                            android:text="@string/lorem"
                            android:textColor="@color/c1"
                            android:textSize="13sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="@+id/appCompatTextView5"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/appCompatTextView5" />
                    </android.support.constraint.ConstraintLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>

        </ScrollView>

        <RelativeLayout
            android:id="@+id/rl_seeOnMap"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:background="@color/green"
            android:gravity="center"
            android:visibility="gone">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_map1"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_toStartOf="@+id/iv_map1"
                android:fontFamily="@font/yekan"
                android:gravity="center"
                android:text="روی نقشه ببینید"
                android:textColor="@color/white" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_map1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:padding="9dp"
                android:src="@drawable/ic_map"
                app:tint="@color/white" />

        </RelativeLayout>

    </RelativeLayout>

    <include layout="@layout/detail_map" />

</android.support.design.widget.CoordinatorLayout>

